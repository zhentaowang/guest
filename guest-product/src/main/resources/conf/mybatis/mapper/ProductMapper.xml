<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhiweicloud.guest.mapper.ProductMapper">
  <resultMap id="productResultMap" type="com.zhiweicloud.guest.model.Product">
    <id column="product_id" jdbcType="BIGINT" property="productId" />
    <result column="product_name" jdbcType="VARCHAR" property="productName" />
    <result column="service_type_ids" jdbcType="VARCHAR" property="serviceTypeIds" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="create_user" jdbcType="BIGINT" property="createUser" />
    <result column="update_user" jdbcType="BIGINT" property="updateUser" />
    <result column="is_deleted" jdbcType="SMALLINT" property="isDeleted" />
    <result column="airport_code" jdbcType="VARCHAR" property="airportCode" />
    <result column="product_no" jdbcType="VARCHAR" property="productNo" />
  </resultMap>

  <sql id="Base_Column_List">
    product_id, concat('P',lpad(product_id,3,0)) AS product_no, product_name
  </sql>

  <update id="updateProduct" parameterType="com.zhiweicloud.guest.model.Product">
    UPDATE
      product
    SET
    <if test="productName != null and ''!= productName">
      product_name = #{productName},
    </if>
    <if test="serviceTypeIds != null and ''!= serviceTypeIds">
      service_type_ids = #{serviceTypeIds},
    </if>
    update_time = NOW(),update_user = #{updateUser}
    WHERE
    product_id = #{productId} AND airport_code = #{airportCode}
  </update>

  <update id="deleteProduct" parameterType="com.zhiweicloud.guest.model.Product">
    UPDATE
    product
    SET
      is_deleted = #{isDeleted},update_time = NOW(),update_user = #{updateUser}
    WHERE
      product_id = #{productId} AND airport_code = #{airportCode}
  </update>

  <select id="queryByIdAndAirCode" resultMap="productResultMap">
    SELECT
      <include refid="Base_Column_List"/>, service_type_ids
    FROM
      product
    WHERE
      product_id = #{productId} AND airport_code = #{airportCode} AND is_deleted = 0
  </select>

  <select id="getProductList" resultMap="productResultMap">
    SELECT
      <include refid="Base_Column_List"/>
    FROM
      product
    WHERE
      airport_code = #{airportCode} AND is_deleted = 0
    ORDER BY create_time DESC  limit #{begin}, #{end}

  </select>
</mapper>